<!--------------------------- SHOUT --------------------------->
<div class="shout">
  <div class="container">
    <h2>Leave feedback or give a shout out!</h2>
    <strong><p class="error error-message"></p></strong>
      
      <%= form_for(@comment, url: shout_path, :html => {:class => 'shout_out'}) do |f| %>
        <%= f.text_field :comment, :id => "shout_comment", :placeholder => "Blank comments will be filtered" %>
        <button type="submit" class="glyphicon glyphicon-arrow-down"></button>
      <% end %>
      
      <ul class="comments">
        <% if @comments %> 
          <% @comments.reverse.each do |comment| %>
             <li><%= comment.comment %></li>
          <% end %>
        <% end %>
      </ul>
    
  </div>
</div>